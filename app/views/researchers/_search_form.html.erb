<p>
<%= search_form_for(@q, url:researchers_search_path) do |f| %><br>
<br>
  <%= f.label :name_cont, '名前' %>
  <%= f.search_field :name_cont %>
<br>
  <%= f.label :sex_eq, '性別' %>
  <%= f.radio_button :sex_eq, '男' %>
  <%= f.radio_button :sex_eq, '女' %> 
</p>
<br>
  <%= f.label :skills_id_in, '保有スキル' %>
  <%= f.collection_check_boxes(:skills_id_in, @skills, :id, :name) do |skill| %>
  <% skill.label { skill.check_box + skill.text } %>
  <% end %>
<br>
  <%= f.label :themes_id_in, '得意テーマ' %>
  <%= f.collection_check_boxes(:themes_id_in, @themes, :id, :name) do |theme| %>
  <% theme.label { theme.check_box + theme.text } %>
  <% end %>
  <%= f.submit %>
<% end %>
